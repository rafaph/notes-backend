{
    "name": "notes-backend",
    "version": "1.4.0",
    "private": true,
    "scripts": {
        "start": "node -r ./boot-paths.js dist/index.js",
        "dev": "ts-node-dev --watch=src/**/*.ts --inspect=0.0.0.0:9229 --exit-child --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
        "test": "mocha",
        "test:watch": "npm test -- --watch",
        "test:integration": "npm test -- --fgrep @integration",
        "test:integration:watch": "npm run test:integration -- --watch",
        "test:unit": "npm run test:integration -- --invert",
        "test:unit:watch": "npm run test:unit -- --watch",
        "pretest:ci": "rimraf coverage .nyc_output",
        "test:ci": "nyc npm test",
        "prelint": "ls-lint",
        "lint": "eslint \"{src,test}/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "prebuild": "rimraf dist",
        "build": "tsc --project tsconfig-build.json",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
        "migration:run": "npm run typeorm -- migration:run"
    },
    "devDependencies": {
        "@ls-lint/ls-lint": "^1.10.0",
        "@types/chai": "^4.2.22",
        "@types/chai-as-promised": "^7.1.4",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/faker": "^5.5.9",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/lodash": "^4.14.175",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.0",
        "@types/pg": "^8.6.1",
        "@types/response-time": "^2.3.5",
        "@types/sinon": "^10.0.4",
        "@types/sinon-chai": "^3.2.5",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^8.3.0",
        "faker": "^5.5.3",
        "git-commit-msg-linter": "^3.2.8",
        "husky": "^7.0.2",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "sinon": "^11.1.2",
        "sinon-chai": "^3.7.0",
        "supertest": "^6.1.6",
        "ts-node-dev": "^1.1.8",
        "typescript": "~4.4.4"
    },
    "dependencies": {
        "argon2": "^0.28.2",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "http-status": "^1.5.0",
        "joi": "^17.4.2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "response-time": "^2.3.2",
        "ts-node": "^10.3.0",
        "tsconfig-paths": "^3.11.0",
        "tsyringe": "^4.6.0",
        "typeorm": "^0.2.38",
        "winston": "^3.3.3"
    },
    "engines": {
        "node": "^14"
    }
}
